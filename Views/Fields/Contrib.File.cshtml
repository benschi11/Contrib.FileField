@using Orchard.Utility.Extensions;

@{
  string name = Model.ContentField.DisplayName;  
}
@if (!string.IsNullOrWhiteSpace(Model.ContentField.Path))
{
    <p class="file-field">
       <span class="name">@name</span>
       <a href="@Url.Content(Model.ContentField.Path)" target="@Model.Settings.OpenAction">@Model.ContentField.DisplayName</a>
    </p>
}